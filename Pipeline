pipeline{
    agent any

    stages{
        stage("Checkout"){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Vamsi-Cloudangles/BigMart-Pipeline.git']]])
            }
        }
        stage("build"){
            steps{
                git branch: 'main', url: 'https://github.com/Vamsi-Cloudangles/BigMart-Pipeline.git'
            }
        }
        stage("load data"){
            steps{
                sh 'python3 loaddata.py'
            }
        }
        stage("data analysis"){
            steps{
                sh 'python3 dataanalysis.py'
            }
        }
        stage("data preprocessing"){
            steps{
                sh 'python3 datapreprocessing.py'
            }
        }
        stage("data visualization"){
            steps{
                sh 'python3 datavisualization.py'
            }
        }
        stage("feature engineering"){
            steps{
                sh 'python3 featureengineering.py'
            }
        }
    }
    post{
       
        always {
            archiveArtifacts artifacts: 'Bigmart_Sales_cleaned_dataset.csv', onlyIfSuccessful: tru
        }
            }
        stage('Upload to AWS') {
              steps {
                  withAWS(region:'us-east-1',credentials:'s3-jenkins-connection') {
                  sh 'echo "Uploading content with AWS creds"'
                      s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file:'Bigmart_Sales_cleaned_dataset.csv', bucket:'artifacts-jenkins-test')
                  }
}
